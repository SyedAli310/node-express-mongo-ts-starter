{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "args": ["src/server.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
    }
  ]
}
