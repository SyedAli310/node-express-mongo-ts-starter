{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "migrations/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public",
        "public-deprecated"
    ]
}